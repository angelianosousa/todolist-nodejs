<form action="<%= url %>" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" name='name' value='<%= task.name %>' class="form-control" id="name" placeholder="name@example.com">
  </div>
  
  <div class="form-check">
    <input class="form-check-input" type="checkbox" defaultChecked=true id="flexCheckDefault" name='done'>
    <label class="form-check-label" for="flexCheckDefault">
      Done ?
    </label>
  </div>

  <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
