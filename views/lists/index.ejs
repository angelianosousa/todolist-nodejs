<%- layout('layouts/application') %>

<div class="d-flex justify-content-between align-items-center">
  <h1><%= title %></h1>

  <a href="/lists/new" class="btn btn-primary"><span class="icon"><i class="fa-solid fa-circle-plus"></i></span>  New list</a>
</div>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% lists.forEach(list => { %>
      <tr>
        <td><%= list.id %></td>
        <td><%= list.title %></td>
        <td><%= list.description %></td>
        <td>
          <a href="/lists/<%= list.id %>/show" class="btn btn-info btn-sm"><span class="icon"><i class="fa-solid fa-list-ul"></i></span></a>
          <a href="/lists/edit/<%= list.id %>" class="btn btn-secondary btn-sm"><span class="icon"><i class="fa-solid fa-pencil"></i></span></a>
          <a href="/lists/<%= list.id %>/delete" class="btn btn-danger btn-sm"><span class="'icon"><i class="fa-solid fa-trash"></i></span></a>
          <a href="/lists/<%= list.id %>/tasks/new" class="btn btn-warning btn-sm"><span class="'icon"><i class="fa-solid fa-circle-plus"></i></span> New Task</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
